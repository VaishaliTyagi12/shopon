@using onshop.Models
@model List<Products>

@{
    ViewData["Title"] = "Home Page";
}

<br /><br />
<div class="row">
    @foreach(var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:21px; color:steelblue">@product.Name</label>
                    </h4>
                </div>
                <img src="~/@product.Image" alt="card Image" class="card-img-top" style="height:300px;"/>
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px;color:#a51313"><b>Price : @product.price</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.id" 
                           class="btn btn-success pull-right btn-outline-info">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
